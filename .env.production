# Agent Factory Production Configuration
# Production environment variables for Docker Compose deployment

# Application Environment
ENVIRONMENT=production
DEBUG=false

# Redis Configuration (Container Network)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# ChromaDB Configuration (Container Network)
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=/app/data/chroma
CHROMA_COLLECTION_NAME=agent_knowledge
CHROMA_EMBEDDING_MODEL=all-MiniLM-L6-v2
CHROMA_CHUNK_SIZE=1000
CHROMA_CHUNK_OVERLAP=200

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
API_KEY=production-secure-api-key-change-me
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8501
API_REQUEST_TIMEOUT=300

# LLM Configuration (REQUIRED - Replace with actual values)
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
LLM_API_KEY=your-openai-api-key-here
LLM_BASE_URL=
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1

# Azure AI Foundry (Alternative to OpenAI)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-05-01-preview
AZURE_OPENAI_USE_AAD=false

# Agent System Configuration
AGENT_MAX_CONCURRENT_AGENTS=5
AGENT_TASK_TIMEOUT=3600
AGENT_HEARTBEAT_INTERVAL=30
AGENT_MAX_RETRIES=3
AGENT_BACKOFF_FACTOR=2.0

# Monitoring Configuration
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PORT=9090
MONITORING_LOG_LEVEL=INFO
MONITORING_ENABLE_TRACING=false
MONITORING_JAEGER_ENDPOINT=

# Data Directories (Container Paths)
DATA_DIRECTORY=/app/data
LOGS_DIRECTORY=/app/logs

# Docker Compose Specific
COMPOSE_PROJECT_NAME=agent-factory
COMPOSE_PROFILES=core  # Options: core,ui,monitoring
