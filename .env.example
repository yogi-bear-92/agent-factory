# Agent Factory Configuration
# Copy this to .env and modify values as needed

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=agent_knowledge
CHROMA_EMBEDDING_MODEL=all-MiniLM-L6-v2
CHROMA_CHUNK_SIZE=1000
CHROMA_CHUNK_OVERLAP=200

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_KEY=your-secure-api-key-here
API_CORS_ORIGINS=*
API_REQUEST_TIMEOUT=300

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_API_KEY=your-openai-api-key-here
LLM_BASE_URL=
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.1

# Azure AI Foundry (Azure OpenAI)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-05-01-preview
AZURE_OPENAI_USE_AAD=false

# Agent System Configuration
AGENT_MAX_CONCURRENT_AGENTS=5
AGENT_TASK_TIMEOUT=3600
AGENT_HEARTBEAT_INTERVAL=30
AGENT_MAX_RETRIES=3
AGENT_BACKOFF_FACTOR=2.0

# Monitoring Configuration
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PORT=9090
MONITORING_LOG_LEVEL=INFO
MONITORING_ENABLE_TRACING=false
MONITORING_JAEGER_ENDPOINT=

# Data Directories
DATA_DIRECTORY=./data
LOGS_DIRECTORY=./logs
